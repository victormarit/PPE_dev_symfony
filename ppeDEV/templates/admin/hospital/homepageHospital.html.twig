{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="../../css/searchBar.css">
    <link rel="stylesheet" href="../../css/homepage.css">
{% endblock %}


{% block title %}Accueil{% endblock %}

{% block body %}
    {% include 'composants/header.html.twig' %}
    {% include 'composants/searchBar.html.twig' %}

    <div class = "alignCards">
        {% for service in services %}
            <div class="card ml-2 mr-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ service.name }}</h5>
                    <a href="{{ path( 'updateService',  {'id': service.id} ) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path( 'delService',  {'id': service.id} ) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        {% endfor %}

        <div class="card ml-2 mr-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Ajouter un service</h5>
                <a href="{{ path('addService') }}" class="btn btn-primary">Ajouter</a>
            </div>
        </div>

    </div>

{% endblock %}