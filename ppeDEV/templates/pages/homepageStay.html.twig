{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="../css/searchBar.css">
    <link rel="stylesheet" href="../css/homepage.css">
{% endblock %}


{% block title %}Séjours{% endblock %}

{% block body %}
    {% include 'composants/header.html.twig' %}
    {% include 'composants/searchbarStay.html.twig' %}




    <table class="table">
        <thead>
        <tr>
            <th scope="col">Numéro</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Service</th>
            <th scope="col">Chambre</th>
            <th scope="col">Lit</th>
            <th scope="col">Date d'entré</th>
            <th scope="col">Date de sortie</th>
            <th scope="col">Durée du séjour</th>
            <th scope="col">Date de création</th>

        </tr>
        </thead>

        {% set num = 0 %}

        {% for stay in stays %}
            {% set num = num + 1 %}
            <tbody>
            <tr>
                <th scope="row">{{ num }}</th>
                <td>{{ stay.lastname }}</td>
                <td>{{ stay.firstname }}</td>
                <td>{{ stay.serviceName }}</td>
                <td>{{ stay.roomNumber }}</td>
                <td>{{ stay.bedNumber }}</td>
                <td>{{ stay.entryDate|date('d/m/Y H:i') }}</td>
                <td>{{ stay.leaveDate|date('d/m/Y H:i') }}</td>
                <td>{{ stay.duration }}</td>
                <td>{{ stay.creationDate|date('d/m/Y H:i') }}</td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
    
    {{ knp_pagination_render(stays) }}
    
    <div class="card ml-2 mr-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Ajouter un séjour</h5>
            <a href="{{ path('addStay') }}" class="btn btn-primary">Ajouter</a>
        </div>
    </div>



{% endblock %}