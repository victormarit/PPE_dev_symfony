{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="../css/searchBar.css">
    <link rel="stylesheet" href="../css/homepage.css">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/deleteAlert.js') }}" defer></script>
{% endblock %}


{% block title %}Accueil{% endblock %}

{% block body %}
    {% include 'composants/header.html.twig' %}
    {% include 'composants/searchbarPatient.html.twig' %}

    <div class = "alignCards">
        {% for patient in patients %}
            <div class="card ml-2 mr-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ patient.firstName }} {{ patient.lastName }}</h5>
                    <p class="card-text"><strong>Numéro de sécurité sociale :</strong> {{ patient.socialSecurityNumber }}</p>
                    <a href="{{ path( 'updatePatient',  {'id': patient.id} ) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path( 'delPatient',  {'id': patient.id} ) }}" class="btn btn-danger delete">Supprimer</a>
                    <a href="{{ path( 'staysPatient',  {'id': patient.id, 'lastname': patient.lastName, 'firstname': patient.firstName} ) }}" class="btn btn-info">Historique Séjours</a>
                    <a href="{{ path( 'newStay',  {'id': patient.id, 'lastname': patient.lastName, 'firstname': patient.firstName} ) }}" class="btn btn-info">Nouveau Séjours</a>
                </div>
            </div>
        {% endfor %}

        <div class="card ml-2 mr-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Ajouter un patient</h5>
                <a href="{{ path( 'createPatient') }}" class="btn btn-primary">Ajouter</a>
            </div>
        </div>

    </div>

    {{ knp_pagination_render(patients) }}

    <div class="modal" tabindex="-1" id="modalDeleteAlert">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Attention</h5>
                </div>
                <div class="modal-body">
                    <p>Etes-vous sûre de vouloir supprimer ce patient ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="modalAlertNon">Non</button>
                    <button type="button" class="btn btn-primary" id="modalAlertOui">Oui</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
