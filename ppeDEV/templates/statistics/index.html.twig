{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset("../css/searchBar.css")}}">
    <link rel="stylesheet" href="{{asset("../css/homepage.css")}}">
{% endblock %}


{% block title %}Statistiques{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset("../css/searchBar.css" )}}">
    <link rel="stylesheet" href="{{ asset("../css/homepage.css" )}}">

    {% include 'composants/header.html.twig' %}

    {% include 'composants/searchBarStatistics.html.twig' %}

    <div class = "alignCards d-flex flex-wrap">
        {% for lit in lits %}
            <div class="card mx-4 my-4" style="width: 20rem; height: 26rem">
                <div class="card-body text-center">
                    <p class="card-text"><a class ="font-weight-bold">Service : </a> {{ lit.serviceName }}</p>
                    <p class="card-text"><a class="font-weight-bold">Chambre : </a> {{ lit.roomNumber }}</p>
                    <p class="card-text"><a class="font-weight-bold">Lit : </a> {{ lit.bedNumber }}</p>
                    <p class="card-text"><a class="font-weight-bold">Temps moyen d'occupation : </a> <br> {{ lit.averageValue|number_format(1, '.', ' ') }} Heures</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(lits) }}
    </div>

{% endblock %}

