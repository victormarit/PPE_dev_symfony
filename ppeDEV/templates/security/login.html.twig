{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <nav class = "navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand ml-4">Connexion</a>
    </nav>

    
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}



    <form method="post">
    <div class="form mt-5" align="center">
        <div class="mb-3 w-50">
            <div class="w-100" align="center">
                <div class="form-signin login">
                    <label for="inputLogin" class="h4">Identifiant:</label>
                    <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus>
                    <label for="inputPassword" class="mt-4 h4">Mot de passe:</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary mt-4 w-50">Valider</button>
                </div>
            </div>
        </div>
    </div>  
</form>
{% endblock %}
